source 'https://rubygems.org'

# Specify your gem's dependencies in cookstyle.gemspec
gemspec

group :debug do
  gem 'pry'
  gem 'pry-byebug'
  gem 'pry-stack_explorer'
end

group :docs do
  gem 'github-markup'
  gem 'redcarpet'
  gem 'yard'
end

group :development do
  gem 'adamantium'
  gem 'anima'
  gem 'concord'
  gem 'rake'
  gem 'rspec', '>= 3.4'
  gem 'simplecov'
end
